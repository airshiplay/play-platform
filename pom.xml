<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.airlenet</groupId>
        <artifactId>play-platform</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>
    <groupId>com.airshiplay</groupId>
    <artifactId>play-module</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Play Application</name>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
        <servlet-api.version>3.1.0</servlet-api.version>
        <play.framework.version>2.0.0-SNAPSHOT</play.framework.version>
        <validator-api.version>1.1.0.Final</validator-api.version>
        <querydsl.version>4.1.1</querydsl.version>
        <hibernate-validator.version>5.2.4.Final</hibernate-validator.version>
        <oltu.version>1.0.2</oltu.version>
    </properties>

    <modules>
        <module>play-http-client</module>
        <module>play-admin-business</module>
        <module>play-admin-webapp</module>
        <module>play-admin-api</module>
        <module>play-admin-webapp-adminlte</module>
        <module>play-website</module>
        <module>play-app-business</module>
        <module>play-app-webapp-adminlte</module>
        <module>play-cms-business</module>
        <module>play-cms-webapp-adminlte</module>
        <module>play-shop-business</module>
        <module>play-shop-webapp-adminlte</module>
        <!--<module>play-oauth2-business</module>-->
        <!--<module>play-oauth2-webapp-bootstrap</module>-->
        <!--<module>play-plugin-business</module>-->
        <!--<module>play-plugin-webapp</module>-->
        <!--<module>play-plugin-business-oauth</module>-->
        <!--<module>play-plugin-webapp-bootstrap-oauth</module>-->
        <!--<module>play-maven-plugin</module>-->
        <!--<module>play-plugin-business-pay</module>-->
        <!--<module>play-plugin-webapp-bootstrap-pay</module>-->

    </modules>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-admin-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-admin-business</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-i18n</artifactId>
                <version>${play.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-admin-webapp-bootstrap</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-oauth2-business</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-integration-webapp</artifactId>
                <version>${play.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-web-common</artifactId>
                <version>${play.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-repo</artifactId>
                <version>${play.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-repo-jpa</artifactId>
                <version>${play.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-json</artifactId>
                <version>${play.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-integration-core</artifactId>
                <version>${play.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-template-freemarker</artifactId>
                <version>${play.framework.version}</version>
            </dependency>

            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-security-shiro</artifactId>
                <version>${play.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-plugin-storage</artifactId>
                <version>${play.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.airlenet</groupId>
                <artifactId>play-template-thymeleaf</artifactId>
                <version>${play.framework.version}</version>
                <exclusions>
                    <exclusion>
                        <artifactId>play-cache</artifactId>
                        <groupId>com.airlenet</groupId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>javax.validation</groupId>
                <artifactId>validation-api</artifactId>
                <version>${validator-api.version}</version>
            </dependency>
            <dependency>
                <groupId>org.hibernate</groupId>
                <artifactId>hibernate-validator</artifactId>
                <version>${hibernate-validator.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok-maven-plugin</artifactId>
                <version>1.16.18.1</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                    <compilerVersion>${java.version}</compilerVersion>
                    <verbose>false</verbose>
                    <optimize>false</optimize>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
            <id>sonatype-nexus-snapshots</id>
            <name>Sonatype Nexus Snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
</project>