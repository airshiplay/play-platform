<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.airlenet</groupId>
		<artifactId>play-thirdparty</artifactId>
		<version>2.0.0</version>
	</parent>
	<artifactId>play-elfinder</artifactId>

	<properties>
		<!-- global project configurations -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<!-- maven plugins versions -->
		<maven-jaxb2-plugin.version>0.12.3</maven-jaxb2-plugin.version>

		<!-- elfinder java connector dependencies versions -->
		<json.version>20160212</json.version>
		<testng.version>6.9.10</testng.version>
		<commons-codec.version>1.10</commons-codec.version>
		<commons-fileupload.version>1.3.1</commons-fileupload.version>
		<commons-compress.version>1.11</commons-compress.version>
		<tika.version>1.12</tika.version>
		<java-image-scaling.version>0.8.6</java-image-scaling.version>
	</properties>

	<dependencies>

		<!-- temp/support -->
		<dependency>
			<groupId>org.apache.tika</groupId>
			<artifactId>tika-core</artifactId>
			<version>${tika.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
			<version>${commons-codec.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-compress</artifactId>
			<version>${commons-compress.version}</version>
		</dependency>
		<dependency>
			<groupId>joda-time</groupId>
			<artifactId>joda-time</artifactId>
		</dependency>
		<dependency>
			<groupId>com.mortennobel</groupId>
			<artifactId>java-image-scaling</artifactId>
			<version>${java-image-scaling.version}</version>
		</dependency>
		<dependency>
			<groupId>com.airlenet</groupId>
			<artifactId>play-web</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>${maven-jaxb2-plugin.version}</version>
				<executions>
					<execution>
						<id>elfinder-schemas</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<generateDirectory>${project.basedir}/src/main/java/</generateDirectory>
							<generatePackage>br.com.trustsystems.elfinder.configuration.jaxb</generatePackage>
							<cleanPackageDirectories>false</cleanPackageDirectories>
							<noFileHeader>true</noFileHeader>
							<episode>false</episode>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
