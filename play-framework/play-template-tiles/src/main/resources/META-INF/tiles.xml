<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE tiles-definitions PUBLIC  
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<definition name="DefaultTemplate" template="/WEB-INF/views/template/layout.jsp">
		<put-attribute name="title" value="Home" />
		<put-attribute name="header" value="/WEB-INF/views/template/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/views/template/menu.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/template/footer.jsp" />
	</definition>
	<definition name="*.page" extends="DefaultTemplate">
		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
	</definition>
	<definition name="/WEB-INF/views/*/*.page.jsp" extends="DefaultTemplate">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	<definition name="*/*/*/*.page" extends="DefaultTemplate">
		<put-attribute name="body" value="/views/{1}/{2}/{3}/{4}.jsp" />
	</definition>
</tiles-definitions>